<?php

/**
 * @file
 * Contains jwt_auth_consumer.module..
 */

/**
 * Implements hook_help().
 */
function jwt_auth_consumer_help($path, $arg) {
  switch ($path) {
    // Main module help for the jwt_auth_consumer module.
    case 'admin/help#jwt_auth_consumer':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Authenticates JWTs generated by the jwt_auth_issuer module.') . '</p>';
      return $output;
  }
  return NULL;
}

function jwt_auth_consumer_jwt_auth_validate_alter(JwtAuthValidateEvent &$validate) {
  JwtAuthConsumerSubscriber::validate($validate);
}

function jwt_auth_consumer_jwt_auth_valid_alter(JwtAuthValidEvent &$valid) {
  JwtAuthConsumerSubscriber::loadUser($valid);
}
